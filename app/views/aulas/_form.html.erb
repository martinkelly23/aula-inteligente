  <div class="row formularios">
    <div class="col-lg-4 col-lg-offset-4 well">
      <h3 class="text-center">Datos del Aula</h3>

      <%= form_for (@aula) do |f| %>
      <br>
      <div class="field">
      <%= f.label :Nombre_Aula %><br>
      <%= f.text_field :NombreAula,required: true %>
      </div>
      <br>
      <div class="field">
      <%= f.label :Departamento %><br>
      <%= f.text_field :Departemento ,required: true %>
      </div>
      <br>
      <div class="field">

      <%= f.label :Consumo_Aula %><br>
      <%= f.number_field :ConsumoAula ,required: true %>
      </div>
      <br>
      <div class="field">
      <%= f.submit 'Guardar', :class => "btn btn-primary dropdown-toggle"%>
    </div>
      <% end %>
</div>
</div>
